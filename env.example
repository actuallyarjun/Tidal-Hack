# Vision Navigation Assistant - Environment Configuration Template
# Copy this file to .env and fill in your actual credentials

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# AWS Bedrock Agent (Optional - leave empty to use local agent)
BEDROCK_AGENT_ID=
BEDROCK_AGENT_ALIAS_ID=

# =============================================================================
# Gemini API Configuration
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# Google Maps (Optional - for future navigation features)
# =============================================================================
GOOGLE_MAPS_API_KEY=

# =============================================================================
# Feature Flags
# =============================================================================
# Set to "true" to enable cloud services, "false" to use mock/local only
USE_BEDROCK=false
USE_GEMINI=false
MOCK_MODE=true

# =============================================================================
# CV Model Configuration
# =============================================================================
YOLO_MODEL_PATH=src/cv_engine/models/yolov8n.pt
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45

# =============================================================================
# Performance Settings
# =============================================================================
TARGET_FPS=30
MAX_DETECTION_LATENCY_MS=100

# =============================================================================
# Audio Settings
# =============================================================================
TTS_RATE=150
TTS_VOLUME=0.9
USE_ONLINE_TTS=false

# =============================================================================
# Distance Estimation Parameters (Monocular)
# =============================================================================
FOCAL_LENGTH_MM=4.0
SENSOR_HEIGHT_MM=6.0
AVG_PERSON_HEIGHT_M=1.7


