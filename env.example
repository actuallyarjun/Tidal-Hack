# =============================================================================
# VISION NAVIGATION ASSISTANT - CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your API keys
# cp env.example .env

# =============================================================================
# GEMINI API (REQUIRED for AI-powered navigation)
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
USE_GEMINI=true

# =============================================================================
# CV ENGINE SETTINGS
# =============================================================================
# YOLO Model Configuration
YOLO_MODEL_PATH=src/cv_engine/models/yolov8n.pt
CONFIDENCE_THRESHOLD=0.5

# Distance Estimation (Camera calibration)
# See CALIBRATION_GUIDE.md for instructions
CALIBRATION_FACTOR=1.0
# Advanced: Only set these if you know your camera specs
# FOCAL_LENGTH_MM=4.0
# SENSOR_HEIGHT_MM=3.0

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
MAX_FPS=30
DETECTION_INTERVAL_MS=100

# =============================================================================
# AUDIO SETTINGS
# =============================================================================
# Text-to-Speech
USE_ONLINE_TTS=false
TTS_RATE=150
TTS_VOLUME=0.9

# Speech Recognition
SPEECH_TIMEOUT=5
AMBIENT_NOISE_DURATION=1

# =============================================================================
# OPTIONAL: GOOGLE MAPS (for future route planning)
# =============================================================================
# GOOGLE_MAPS_API_KEY=your_maps_key_here

